                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="AliceBlue" BorderColor="Black" BorderWidth="1" Clicked="Button_Clicked"/>
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="AliceBlue" BorderColor="Black" BorderWidth="1" Clicked="Button_Clicked"/>
                <Button HeightRequest="100" WidthRequest="100" FontSize="60" BackgroundColor="AliceBlue" BorderColor="Black" BorderWidth="1" Clicked="Button_Clicked"/>
